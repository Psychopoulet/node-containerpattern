{
  "name": "node-containerpattern",
  "version": "1.6.0",
  "description": "A 'Container pattern' object for a clean global use of data.",

  "typings": "./lib/commonjs/index.d.cts",
  "main": "./lib/commonjs/main.cjs",

  "exports": {
	".": {

	  "import": {
		  "types": "./lib/esm/index.d.mts",
		  "default": "./lib/esm/index.mjs"
	  },

	  "require": {
		  "types": "./lib/commonjs/index.d.cts",
		  "default": "./lib/commonjs/index.cjs"
	  }

	}
},

  "scripts": {

    "check-updates": "npx check-version-modules",

    "compile": "npm run compile-commonjs && npm run compile-esm",
    "compile-commonjs": "node ./compile.js -- --module commonjs",
    "compile-esm": "node ./compile.js -- --module es2022",

    "unit-tests": "npx nyc --reporter=html --reporter=text mocha",
    "tests": "npm run-script lint && npm run-script check-updates && npm run-script unit-tests",
    "ci": "npm run-script tests && npx nyc report --reporter=text-lcov | coveralls"

  },

  "files": [
    "/lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run-script lint",
      "pre-push": "npm run-script tests"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Psychopoulet/node-containerpattern.git"
  },
  "keywords": [
    "node",
    "container",
    "pattern",
    "structure",
    "skeleton",
    "recursive",
    "Map",
    "data",
    "ensure",
    "formate",
    "documentation"
  ],
  "author": "SÃ©bastien VIDAL",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Psychopoulet/node-containerpattern/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "17.0.35",
    "check-version-modules": "1.3.5",
    "coveralls": "3.1.1",
    "eslint": "8.16.0",
    "fs-extra": "10.1.0",
    "husky": "8.0.1",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "typescript": "4.6.4"
  },
  "homepage": "https://github.com/Psychopoulet/node-containerpattern#readme",
  "engines": {
    "node": ">=10.0.0"
  }
}
